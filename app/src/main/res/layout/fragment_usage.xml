<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_usage"
        android:textSize="@dimen/heading_font_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_current_subtitle_usage"
        android:textSize="@dimen/subheading_font_size"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/usage_field_length"
            android:layout_height="wrap_content"
            android:text="@string/label_daily_usage"
            android:textSize="@dimen/body_text_size"
            />

        <TextView
            android:id="@+id/account_today_usage_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/body_text_size"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/usage_field_length"
            android:layout_height="wrap_content"
            android:text="@string/label_month_usage"
            android:textSize="@dimen/body_text_size"
            />

        <TextView
            android:id="@+id/account_this_month_usage_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/body_text_size"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_previous_subtitle_usage"
        android:textSize="@dimen/subheading_font_size"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/usage_field_length"
            android:layout_height="wrap_content"
            android:text="@string/label_last_month_usage"
            android:textSize="@dimen/body_text_size"
            />

        <TextView
            android:id="@+id/account_last_month_usage_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/body_text_size"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_costs_subtitle_usage"
        android:textSize="@dimen/heading_font_size"
        android:layout_marginTop="20dp"/>

</LinearLayout>