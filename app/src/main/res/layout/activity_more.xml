<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sit374group9.androidprototype.MoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/button_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_contact_us"
            />

        <Button
            android:id="@+id/button_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_feedback"
            />

        <Button
            android:id="@+id/button_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_about_us"
            />

        <Button
            android:id="@+id/button_termsconditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_terms_conditions"
            />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        />

</android.support.v4.widget.DrawerLayout>
